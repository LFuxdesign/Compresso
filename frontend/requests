<input type="file" id="imageInput" multiple accept="image/*" />
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Upload múltiplas imagens</title>
</head>
<body>
  <h2>Selecione várias imagens</h2>
  <input type="file" id="imageInput" multiple accept="image/*" />
  <br><br>

  <button onclick="enviar()">Enviar imagens</button>

  <script>
    async function enviar() {
      const input = document.getElementById('imageInput');
      const files = input.files;

      if (!files.length) {
        alert('Selecione pelo menos uma imagem!');
        return;
      }

      const formData = new FormData();

      // Adiciona TODAS as imagens no campo 'images'
      for (let i = 0; i < files.length; i++) {
        formData.append('images', files[i]);  // Campo tem que se chamar 'images' (plural) para bater com Multer
      }

      // Adiciona outros campos
      formData.append('format', 'webp');
      formData.append('quality', '50');
      formData.append('email', 'usuario@exemplo.com');

      try {
        const response = await fetch('https://localhost:3002/api/compress', {
          method: 'POST',
          body: formData
        });

        if (!response.ok) {
          console.error('Erro na resposta:', await response.text());
          return;
        }

        const json = await response.json();
        console.log('Resposta da API:', json);

        // Exibir as imagens retornadas (base64)
        json.images.forEach(img => {
          const imgEl = document.createElement('img');
          imgEl.src = `data:image/${formData.get('format')};base64,${img.buffer}`;
          imgEl.style.maxWidth = '200px';
          imgEl.style.margin = '10px';
          document.body.appendChild(imgEl);
        });
      } catch (err) {
        console.error('Erro na requisição:', err);
      }
    }
  </script>
</body>
</html>
